<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <stroke
                android:width="2dp"
                android:color="@color/borderColorG"
                />
            <gradient
                android:angle="270"
                android:startColor="@color/bgColor"
                android:endColor="@color/bgColor"
                android:type="linear"
                />
        </shape>

    </item>

</layer-list>